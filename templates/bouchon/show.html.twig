{% extends 'base.html.twig' %}

{% block title %}{{ bouchon.nom }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <!-- Image -->
        <div class="col-md-5">
            {% if bouchon.imageUrl %}
                <img src="{{ asset(bouchon.imageUrl) }}" alt="{{ bouchon.nom }}" class="img-fluid rounded shadow-sm">
            {% else %}
                <div class="bg-light p-5 text-center text-muted border rounded">
                    Ajouter une Image 
                </div>
            {% endif %}
        </div>
        <!-- Infos produit -->
        <div class="col-md-7">
            <h1 class="text-primary">{{ bouchon.nom }}</h1>
            <p class="text-muted">{{ bouchon.description }}</p>

            <ul class="list-group mb-4">
                {% if variante.antenneCouleur is defined %}
                    <li class="list-group-item"><strong>Couleur antenne :</strong> {{ variante.antenneCouleur.nom }}</li>
                {% endif %}
                {% if variante.grammageCorps is defined %}
                    <li class="list-group-item"><strong>Grammage :</strong> {{ variante.grammageCorps.poids }} g</li>
                {% endif %}
                {% if variante.typeCorps is defined %}
                    <li class="list-group-item"><strong>Type de corps :</strong> {{ variante.typeCorps.nom }}</li>
                {% endif %}
                {% if variante.couleur is defined %}
                    <li class="list-group-item"><strong>Couleur du corps :</strong> {{ variante.couleur.nom }}</li>
                {% endif %}
                {% if variante.longueurAntenne is defined %}
                    <li class="list-group-item"><strong>Longueur antenne :</strong> {{ variante.longueurAntenne.longueur }} cm</li>
                {% endif %}
                {% if variante.longueurQuille is defined %}
                    <li class="list-group-item"><strong>Longueur quille :</strong> {{ variante.longueurQuille.longueur }} cm</li>
                {% endif %}
            </ul>
            <a href="{{ path('admin_bouchon_index') }}" class="btn btn-secondary">
                ← Retour à la liste
            </a>
        </div>
    </div>
</div>
{% endblock %}
