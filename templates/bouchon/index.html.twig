{% extends 'base.html.twig' %}

{% block title %}Flotteurs{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center text-primary display-4 fw-bold">Nos flotteurs</h1>

    <div class="row mt-4">
        {% for bouchon in bouchons %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow rounded-4 p-3 h-100">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title text-success">{{ bouchon.nom }}</h3>
                        <p class="card-text text-muted">{{ bouchon.description }}</p>
                        <div class="mt-auto">
                            <a href="{{ path('app_bouchon_variante_show', {id: bouchon.id}) }}"
                               class="btn btn-outline-primary w-100 mt-3">Voir ce bouchon</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center text-muted">Aucun bouchon disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>

</div>
{% endblock %}
