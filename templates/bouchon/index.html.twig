{% extends 'base.html.twig' %}

{% block title %}Flotteurs{% endblock %}
{% block body %}
<div class="container mt-5">
    <h1 class="text-center text-primary display-4 fw-bold mb-4">Nos flotteurs</h1>

    <div class="row">
        {% set imageMap = {
            'Flotteurs Bordure': 'Flotteurs-bordure.jpg',
            'Flotteurs PÃ¢te': 'Flotteurs-pate.jpg',
            'Flotteurs Plaine eau': 'Flotteurs-plaine-eau.jpg',
            'Flotteurs Personnalisables': 'Flotteurs_Personnalisables.jpg'
        } %}
        {% for bouchon in bouchons %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm rounded-4 h-100 overflow-hidden">
                    {% set imageName = imageMap[bouchon.nom]|default('default.jpg') %}
                    <img src="{{ asset('image/' ~ imageName) }}" class="card-img-top" alt="{{ bouchon.nom }}">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-success">{{ bouchon.nom }}</h5>
                        <p class="card-text text-muted">{{ bouchon.description }}</p>
                        <div class="mt-auto">
                            <a href="{{ path('app_bouchon_variante_show', {id: bouchon.id}) }}"
                               class="btn btn-outline-primary w-100 mt-3">
                                Voir les variantes
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center text-muted">Aucun bouchon disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
