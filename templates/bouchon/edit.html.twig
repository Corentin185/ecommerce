{% extends 'base.html.twig' %}

{% block title %}Modifier un Bouchon{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-primary">Modifier un Bouchon</h1>

        <div class="form-card">
            {{ include('bouchon/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>

        <div class="mt-4 d-flex justify-content-between align-items-center">
            <a href="{{ path('admin_bouchon_index') }}" class="btn btn-outline-secondary">
                ← Retour à la liste
            </a>
            {{ include('bouchon/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
        }

        .form-card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        }

        form label {
            font-weight: 600;
            margin-top: 15px;
        }

        form input[type="text"],
        form input[type="url"],
        form input[type="datetime-local"],
        form textarea,
        form select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 15px;
        }

        form input[type="checkbox"] {
            margin-right: 5px;
        }

        form button,
        form input[type="submit"] {
            margin-top: 20px;
            padding: 10px 25px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
        }

        form button:hover,
        form input[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}
