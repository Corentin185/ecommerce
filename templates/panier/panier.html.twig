{% extends 'base.html.twig' %}

{% block title %}Votre Panier{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center text-primary fw-bold">üõí Votre Panier</h1>

    <div class="text-start mt-3 mb-4">
        <a href="{{ path('app_bouchon_index') }}" class="btn btn-outline-primary">üè† Retour aux produits</a>
    </div>

    {% if cart|length > 0 %}
        <form method="post" action="{{ path('panier_modifier') }}">
            <table class="table table-bordered align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th>description</th>
                        <th>Prix unitaire</th>
                        <th>Quantit√©</th>
                        <th>Total</th>
                        <th>Action</th>
                        
                    </tr>
                </thead>
                <tbody>
                    {% for item in cart %}
                        <tr>
                            <td>
                                <strong>{{ item.produit.bouchon.nom }}</strong><br>
                                Antenne : {{ item.produit.antenneCouleur.nom }}<br>
                                Type : {{ item.produit.typeCorps.nom }}<br>
                                Grammage : {{ item.produit.grammageCorps.poids }} g<br>
                                Antenne Longueur : {{ item.produit.antenneLongueur.longueur }} cm<br>
                                Quille : {{ item.produit.quilleLongueur.nom }}<br>
                                Couleur : {{ item.produit.couleur.nom }}
                            </td>
                            <td class="text-center">{{ item.produit.prix|number_format(2, ',', ' ') }} ‚Ç¨</td>
                            <td class="text-center">
                                <input type="number" name="quantites[{{ item.produit.id }}]" value="{{ item.quantite }}" min="1" class="form-control text-center w-75 mx-auto" />
                            </td>
                            <td class="text-center">
                                {{ (item.produit.prix * item.quantite)|number_format(2, ',', ' ') }} ‚Ç¨
                            </td>
                            <td class="text-center">
                                <a href="{{ path('panier_supprimer', {'id': item.produit.id}) }}" class="btn btn-sm btn-danger">üóë Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="text-end mt-4">
                <h4>Total : <strong>{{ total|number_format(2, ',', ' ') }} ‚Ç¨</strong></h4>

                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button type="submit" class="btn btn-success">‚úÖ Mettre √† jour le panier</button>
                    <a href="{{ path('panier_vider') }}" class="btn btn-warning">‚ùå Vider le panier</a>
                </div>              
            </div>
        </form>
    {% else %}
        <div class="alert alert-info text-center mt-4">
            <p>Votre panier est vide.</p>
            <a href="{{ path('app_bouchon_index') }}" class="btn btn-primary">üõç Voir les produits</a>
        </div>
    {% endif %}
</div>
{% endblock %}
