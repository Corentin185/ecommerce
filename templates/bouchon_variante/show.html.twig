{% extends 'base.html.twig' %}

{% block title %}flotteurs de bordure{% endblock %}
 {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
        <style>
            body {
                font-family: 'Poppins', sans-serif;
                background-color: #f8f9fa;
            }
            .navbar-brand {
                font-size: 1.8rem;
                font-weight: bold;
                color: #0056b3 !important;
            }
            .hero {
                background: url('https://source.unsplash.com/1600x500/?fishing') no-repeat center center;
                background-size: cover;
                text-align: center;
                padding: 60px 20px;
            }
            .hero h1 {
                font-size: 3rem;
                font-weight: bold;
                color: #007bff;
            }
            .hero h2 {
                font-size: 1.8rem;
                font-weight: 400;
                color: #333;
            }
            .footer {
                background-color: #343a40;
                color: white;
                padding: 20px 0;
                text-align: center;
                margin-top: 30px;
            }
            .footer a {
                color: #17a2b8;
                text-decoration: none;
            }
              h1 {
            text-align: center;
            margin: 30px 0;
            font-size: 2rem;
        }

        table.table {
            width: 95%;
            margin: auto;
            border-collapse: collapse;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        table.table th, table.table td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: center;
        }

        table.table thead {
            background-color: #f5f5f5;
        }

        .add-to-cart-btn {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

        .add-to-cart-btn:hover {
            background-color: #218838;
        }
        </style>
    {% endblock %}
{% block body %}
    <h1>Nos flotteurs </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom du bouchon</th>
                <th>Description du bouchon</th>
                <th>Couleur de l'antenne</th>
                <th>type de corps</th>
                <th>Grammage</th>
                <th>Longueur de l'antenne</th>
                <th>Longueur de la quilles</th>
                <th>Couleurs du corps du flotteurs</th>
                <th>favoris</th>
                <th>panier</th>
                <th>Prix </th>
            </tr>
        </thead>
        <tbody>
        {% for bouchon_variante in bouchon_variantes %}
            <tr>
                <td>{{ bouchon_variante.bouchon.nom }}</td>
                <td>{{ bouchon_variante.bouchon.description }}</td>
                <td>{{ bouchon_variante.antenneCouleur.nom }}</td>
                <td>{{ bouchon_variante.typeCorps.nom}}</td>
                <td>{{ bouchon_variante.grammageCorps.poids}}</td>
                <td>{{ bouchon_variante.antenneLongueur.Longueur}}</td>
                <td>{{ bouchon_variante.quilleLongueur.nom}}</td>
                <td>{{ bouchon_variante.couleur.nom}}</td>
                <td>
                    <a href="{{ path('favoris_ajouter', {'id': bouchon_variante.id}) }}" class="btn btn-outline-dark">
                        <i class="bi bi-heart"></i> Ajouter au Favoris
                    </a>
                </td>
                 <td>
                   <form action="{{ path('panier_ajouter', {'id': bouchon_variante.id}) }}" method="post">
                        <button type="submit" class="add-to-cart-btn">Ajouter au panier</button>
                    </form>
                </td>
                <td>{{ bouchon_variante.prix }}</td
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}