{% extends 'base.html.twig' %}

{% block title %}
    Modifier la variante n°{{ bouchon_variante.id }}{% if bouchon_variante.bouchon is defined %} – {{ bouchon_variante.bouchon.nom }}{% endif %}
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary fw-bold">
            <i class="bi bi-pencil-square me-2"></i>
            Modifier la variante n°{{ bouchon_variante.id }}
            {% if bouchon_variante.bouchon is defined %}
                <small class="text-muted">de <em>{{ bouchon_variante.bouchon.nom }}</em></small>
            {% endif %}
        </h1>
        <a href="{% if bouchon_variante.bouchon is defined %}
                     {{ path('admin_bouchon_variante_show', {id: bouchon_variante.bouchon.id}) }}
                 {% else %}
                     {{ path('admin_bouchon_variante_index') }}
                 {% endif %}"
           class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Retour
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4 p-4 mb-4 bg-white">
        {{ include('bouchon_variante/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>

    <div class="text-end">
        {{ include('bouchon_variante/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card form .form-group + .form-group {
            margin-top: 1rem;
        }
        .card input[type="submit"],
        .card button[type="submit"] {
            margin-top: 1.5rem;
        }
        h1 small {
            font-size: 0.7em;
            font-weight: normal;
        }
    </style>
{% endblock %}
